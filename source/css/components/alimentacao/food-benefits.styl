p
    font-weight: 400
    line-height: 1.5
.food-benefits
    .title
        display: flex
        justify-content: space-around
        text-transform: uppercase
        color: $color.primary
        padding: 80px 0 80px
        h2
            border: solid 2px $color.secondary
            background-color: $color.secondary
            border-radius: 50px
            padding: 5px 30px 5px 30px
.faq
    th
        color: $color.secondary
        font-size: 15px
        padding: 10px 130px 10px 0
    td
        font-weight: 400
        font-size: 15px
        padding: 10px 130px 10px 0
    table, th, td
        border-bottom: solid 1px $color.primary
        border-collapse: collapse
.card-question
    display: flex
    justify-content: flex-start
    margin-bottom: 30px
    figure
        padding: 0 30px 0 0
    .text
        flex: 1
        h3 
            text-transform: uppercase
            color: $color.secondary
            padding-bottom: 20px
.answer
    font-weight: 400
.first-steps
    text-align: center
.substitute
    display: flex
    justify-content: space-around
    padding-bottom: 60px
    span 
        display: inline-block
        margin-bottom: 20px
        font-size: 30px
    figure
        padding-bottom: 20px
.unfreeze
    display: flex
    justify-content: space-around
    p
        padding: 20px 40px 0
    span 
        font-size: 40px
