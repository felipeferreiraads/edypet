.feedback
    margin-bottom: 60px
    .title
        h2 
            text-align: center
            text-transform: uppercase
            color: $color.secondary
            position relative
            margin-bottom: 60px
            letter-spacing: 8px
            padding: 40px 0 40px 0
            &::after
                content: ""
                width: 300px
                height 1px
                background: $color.primary
                position absolute
                bottom: 0
                left: 50%
                transform: translateX(-50%)
    .testimonials
        display: flex
        justify-content: space-between
        +below($bp.md)
            display: flex
            flex-direction: column
        .card-feedback
            display: flex
            justify-content: space-between
            padding: 20px
            +below($bp.lg)
                display: flex
                flex-direction: column
                justify-content: center
                padding-bottom: 40px
            figure
                margin-right: 20px
                border-radius: 100%
                +below($bp.lg)
                    display: flex
                    justify-content: center
                    padding-bottom: 20px
            p
                padding-bottom: 10px
                +below($bp.lg)
                    text-align: center
            span 
                font-weight: 700
                +below($bp.lg)
                    display: block
                    text-align: center