p
    font-weight: 400
    line-height: 1.5
.food-benefits, .faq, .first-steps
    .title
        display: flex
        justify-content: center
        text-transform: uppercase
        text-align: center
        color: $color.primary
        padding: 80px 0 80px
        h2
            border: solid 2px $color.secondary
            background-color: $color.secondary
            border-radius: 50px
            padding: 5px 30px 5px 30px
.faq
    th
        color: $color.secondary
        font-size: 15px
        padding: 10px 0 10px 0
        width: 400px
        text-align: left
    td
        font-weight: 400
        font-size: 15px
        padding: 10px 0 10px 0
    table, th, td
        border-bottom: solid 1px $color.primary
        border-collapse: collapse
.card-question
    display: flex
    justify-content: flex-start
    margin-bottom: 30px
    +below($bp.sm)
        flex-direction: column
    figure
        padding: 0 30px 0 0
        +below($bp.sm)
            margin-bottom: 20px
            display: flex
            justify-content: center
            padding: 0
    .text
        flex: 1
        h3 
            text-transform: uppercase
            color: $color.secondary
            padding-bottom: 20px
            +below($bp.sm)
                text-align: center
        p
            +below($bp.sm)
                text-align: center
.answer
    font-weight: 400
.first-steps
    text-align: center
.substitute
    display: flex
    justify-content: space-around
    padding-bottom: 60px
    +below($bp.md)   
        flex-wrap: wrap
    +below($bp.xs)   
        flex-direction: column
        justify-content: center
    .card-substitute
        padding: 10px
        +below($bp.md)   
            margin-bottom: 40px 
            width: 50% 
        +below($bp.xs)  
            width: 100%
    span 
        display: inline-block
        margin-bottom: 20px
        font-size: 30px
    figure
        padding-bottom: 20px
.unfreeze
    display: flex
    justify-content: space-around
    +below($bp.sm)
        flex-direction: column
        justify-content: center
    .card-unfreeze
        +below($bp.sm)
            margin-bottom: 40px
    p
        padding: 20px 40px 0
    span 
        font-size: 40px
