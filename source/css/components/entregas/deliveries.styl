.deliveries
    margin-bottom: 60px
    .title
        h2 
            text-align: center
            text-transform: uppercase
            color: $color.secondary
            position relative
            margin-bottom: 60px
            letter-spacing: 8px
            padding: 40px 0 40px 0
            &::after
                content: ""
                width: 300px
                height 1px
                background: $color.primary
                position absolute
                bottom: 0
                left: 50%
                transform: translateX(-50%)
    .card-info
        margin-bottom: 40px
        h3 
            text-transform: uppercase
            color: $color.secondary
            margin-bottom: 20px
        p 
            margin-bottom: 20px