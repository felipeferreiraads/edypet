.product
    margin: 60px 0 60px 0
    img 
        border-radius: 100%
    h1 
        margin-bottom: 20px
        text-transform: uppercase
    p
        margin-bottom: 20px
        &.description
            font-size: 22px
            margin-bottom: 30px
        &.conditions
            font-size: 16px
            margin-bottom: 10px
    a
        color: $color.secondary
        font-weight: 700
    .grid
        display: flex
        justify-content: space-around
        align-items: center
    .product-info
        padding-left: 80px
    .pricing
        display: flex
        justify-content: space-between
        align-items: center
        margin-top: 30px
        .left
            display: flex
            flex-direction: column
            .price
                color: $color.secondary
                font-size: 26px
        .right
            input 
                border: none 
                width: 40px
                background: none
        a
            color: $color.secondary
            text-transform: uppercase
            font-size: 16px
            font-weight: 700
            border: 1px solid $color.primary
            border-radius: 30px
            padding: 10px 20px 10px 20px
            margin-left: 10px
            &:hover
                border: 1px solid $color.primary
                background: $color.primary
                border-radius: 30px
                transition: 0.2s